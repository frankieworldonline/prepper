<modpreppers>
	<!-- Preppers Mod by Frankieworldonline --> 
	

<!-- The following section adds a new Background Image -->

-<append xpath="/windows/window[@name='menuBackground']">
<texture anchor_top="#cam,1,5" anchor_right="#cam,1,5" anchor_bottom="#cam,0,-5" anchor_left="#cam,0,-5" texture="@file:Mods/prepper/Textures/mainmenu/background.png" depth="1"/>
</append>
<remove xpath="/windows/window[@name='menuBackground']/texture[@name='bgTexture']"/>

<!-- NO DROPON DEATH -->

<set xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsContents']/rect[@tab_key='Advanced']/grid/gameoption[@name='DropOnDeath']/@display_names">goNone,goAll,goToolbelt,goBackpack,goDeleteAll</set>
<set xpath="/windows/window[@name='serverBrowser']/panel[@name='serverfilters']/panel[@controller='TabSelector']/rect[@name='tabsContents']/rect[@tab_key='Advanced']/grid/browsergameoptioncombined[@name='DropOnDeath']/@display_names">goNone,goAll,goToolbelt,goBackpack,goDeleteAll</set>
<set xpath="/windows/window[@name='serverBrowser']/rect[@name='serverinfo']/panel[@controller='TabSelector']/rect[@name='tabsContents']/rect[@tab_key='Advanced']/grid/browsergameoptioninfo[@name='DropOnDeath']/@display_names">goNone,goAll,goToolbelt,goBackpack,goDeleteAll</set>



<!-- Preppers Mod by Frankieworldonline --> 
</modpreppers>